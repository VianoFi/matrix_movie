@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Accesso Negato";
}

<link href="https://fonts.googleapis.com/css2?family=Share+Tech+Mono&display=swap" rel="stylesheet">

<div class="container text-center mt-5">
    <div class="matrix-card-login mx-auto p-5">
        <h1 class="matrix-title mb-3">🚫 ACCESSO NEGATO</h1>
        <p class="mb-4">Non hai i permessi per accedere a questa sezione.</p>
        <a asp-controller="Home" asp-action="Index" class="btn-matrix">Torna alla Home</a>
    </div>
</div>

@section Styles {
    <style>
        body {
            background: #000;
            color: #39FF14;
            font-family: 'Share Tech Mono', monospace;
        }

        .matrix-card-login {
            background: #0d0d0d;
            border: 1px solid #39FF14;
            border-radius: 10px;
            box-shadow: 0 0 15px #39FF14;
            max-width: 450px;
        }

        .matrix-title {
            color: #ff4040;
            text-shadow: 0 0 12px #ff4040;
        }

        .btn-matrix {
            border: 1px solid #39FF14;
            color: #39FF14;
            background: transparent;
            padding: 10px 22px;
            border-radius: 8px;
            font-weight: bold;
            text-transform: uppercase;
            transition: all .3s ease;
            text-decoration: none;
        }

            .btn-matrix:hover {
                background: #39FF14;
                color: #000;
                box-shadow: 0 0 12px #39FF14;
            }
    </style>
}
