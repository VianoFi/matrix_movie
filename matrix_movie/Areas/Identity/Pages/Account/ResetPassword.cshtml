@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<link href="https://fonts.googleapis.com/css2?family=Share+Tech+Mono&display=swap" rel="stylesheet">

<div class="container text-center mt-5">
    <div class="matrix-card-login mx-auto p-5">
        <h1 class="matrix-title mb-4">RESET PASSWORD</h1>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3 text-start">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control matrix-input" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3 text-start">
                <label asp-for="Input.NewPassword" class="form-label">Nuova Password</label>
                <input asp-for="Input.NewPassword" class="form-control matrix-input" type="password" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-4 text-start">
                <label asp-for="Input.ConfirmPassword" class="form-label">Conferma Password</label>
                <input asp-for="Input.ConfirmPassword" class="form-control matrix-input" type="password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-matrix w-100">CAMBIA PASSWORD</button>
        </form>

        <div class="mt-4">
            <a asp-page="./Login" class="matrix-link">Torna al Login</a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background: #000;
            color: #39FF14;
            font-family: 'Share Tech Mono', monospace;
        }

        .matrix-card-login {
            background: #0d0d0d;
            border: 1px solid #39FF14;
            border-radius: 10px;
            box-shadow: 0 0 15px #39FF14;
            max-width: 450px;
        }

        .matrix-title {
            color: #39FF14;
            text-shadow: 0 0 10px #39FF14;
        }

        .matrix-input {
            background-color: #000;
            color: #39FF14;
            border: 1px solid #39FF14;
            box-shadow: none;
        }

            .matrix-input:focus {
                background-color: #000;
                color: #39FF14;
                border-color: #00ff88;
                box-shadow: 0 0 10px #39FF14;
            }

        .btn-matrix {
            border: 1px solid #39FF14;
            color: #39FF14;
            background: transparent;
            padding: 10px 22px;
            border-radius: 8px;
            font-weight: bold;
            text-transform: uppercase;
            transition: all .3s ease;
        }

            .btn-matrix:hover {
                background: #39FF14;
                color: #000;
                box-shadow: 0 0 12px #39FF14;
            }

        .matrix-link {
            color: #39FF14;
            text-decoration: none;
            text-shadow: 0 0 8px #39FF14;
        }

            .matrix-link:hover {
                color: #000;
                background: #39FF14;
                padding: 3px 8px;
                border-radius: 5px;
            }
    </style>
}
