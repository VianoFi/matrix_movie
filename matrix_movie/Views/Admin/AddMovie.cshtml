@model matrix_movie.Models.Movie
@{
    ViewData["Title"] = "Aggiungi Film";
}

<div class="container mt-5">
    <h1 class="matrix-title mb-4">➕ Aggiungi Film</h1>

    <form asp-action="AddMovie" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label">Titolo</label>
            <input asp-for="Title" class="form-control bg-dark text-light border-success" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Anno</label>
            <input asp-for="Year" class="form-control bg-dark text-light border-success" type="number" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Genere</label>
            <input asp-for="Genre" class="form-control bg-dark text-light border-success" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Descrizione</label>
            <textarea asp-for="Description" class="form-control bg-dark text-light border-success" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Trama</label>
            <textarea asp-for="Plot" class="form-control bg-dark text-light border-success" rows="4"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Immagine (URL)</label>
            <input asp-for="ImageUrl" class="form-control bg-dark text-light border-success" required />
        </div>

        <div class="mt-4 d-flex gap-3 justify-content-center">
            <button type="submit" class="btn-matrix">
                SALVA
            </button>
            <a asp-action="Index" class="btn-matrix">
                ⬅ INDIETRO
            </a>
        </div>
    </form>
</div>

@section Styles {
    <style>
        body {
            background-color: #000;
            color: #39FF14;
            font-family: 'Share Tech Mono', monospace;
        }

        .btn-matrix {
            border: 1px solid #39FF14;
            color: #39FF14;
            background: transparent;
            padding: 10px 20px;
            text-transform: uppercase;
            border-radius: 8px;
            transition: all .3s;
            text-decoration: none;
        }

            .btn-matrix:hover {
                background: #39FF14;
                color: #000;
                box-shadow: 0 0 10px #39FF14;
            }
    </style>
}
