@model IEnumerable<matrix_movie.Models.Movie>
@{
    ViewData["Title"] = "Gestione Film";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="matrix-title">🎬 Gestione Film</h1>
        <a asp-controller="Home" asp-action="Index" class="btn-matrix-home">🏠 TORNA ALLA HOME</a>
    </div>

    <div class="text-end mb-3">
        <a asp-action="AddMovie" class="btn-matrix-admin">➕ AGGIUNGI FILM</a>
    </div>

    <table class="table table-dark table-bordered border-success text-center align-middle">
        <thead>
            <tr class="table-header">
                <th>Titolo</th>
                <th>Genere</th>
                <th>Anno</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Genre</td>
                    <td>@movie.Year</td>
                    <td>
                        <a asp-action="EditMovie" asp-route-id="@movie.Id" class="btn-action edit">✏️ Modifica</a>
                        <a asp-action="DeleteMovie" asp-route-id="@movie.Id" class="btn-action delete">🗑️ Elimina</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        background: #000;
        color: #39FF14;
        font-family: 'Share Tech Mono', monospace;
    }

    .matrix-title {
        text-shadow: 0 0 15px #39FF14;
        font-size: 2rem;
    }

    .table {
        background-color: #0d0d0d;
        color: #39FF14;
        box-shadow: 0 0 20px #39FF14;
    }

    .table-header {
        background: #111;
        color: #39FF14;
        text-transform: uppercase;
    }

    .btn-matrix-home, .btn-matrix-admin {
        border: 1px solid #39FF14;
        color: #39FF14;
        background: transparent;
        padding: 10px 18px;
        border-radius: 8px;
        font-weight: bold;
        text-decoration: none;
        transition: all .3s;
    }

        .btn-matrix-home:hover, .btn-matrix-admin:hover {
            background: #39FF14;
            color: #000;
            box-shadow: 0 0 20px #39FF14;
            text-decoration: none;
        }

    .btn-action {
        border: 1px solid #39FF14;
        border-radius: 6px;
        padding: 5px 12px;
        color: #39FF14;
        margin: 0 3px;
        transition: all .3s ease;
        text-decoration: none;
        font-weight: 600;
    }

        .btn-action:hover {
            background: #39FF14;
            color: #000;
            box-shadow: 0 0 10px #39FF14;
            text-decoration: none;
        }

        .btn-action.delete:hover {
            background: #ff4040;
            color: #fff;
            box-shadow: 0 0 15px #ff4040;
        }
</style>
