@model List<matrix_movie.Models.Movie>
@{
    ViewData["Title"] = "Home";
    var watchedMovies = ViewBag.WatchedMovies as List<int> ?? new List<int>();
}

<link href="https://fonts.googleapis.com/css2?family=Share+Tech+Mono&display=swap" rel="stylesheet">

<div class="container mt-4">

    <!-- Se Admin: pulsante aggiungi -->
    @if (User.IsInRole("Admin"))
    {
        <div class="text-end mb-4">
            <a asp-controller="Admin" asp-action="Index" class="btn-matrix-admin">
                GESTISCI FILM
            </a>
        </div>
    }


    <!-- Griglia completa -->
    <div class="row row-cols-2 row-cols-md-4 row-cols-lg-6 g-4">
        @foreach (var movie in Model)
        {
            var isWatched = watchedMovies.Contains(movie.Id);
            <div class="col">
                <div class="card h-100 matrix-card"
                     onclick="location.href='@Url.Action("Dettagli", "Home", new { id = movie.Id })'">
                    <div class="position-relative">
                        <img src="@movie.ImageUrl" class="card-img-top movie-poster" alt="@movie.Title" />

                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                            <!-- Aggiungi ai visti -->
                            @if (isWatched)
                            {
                                <button class="btn-watch position-absolute top-0 end-0 m-2" disabled title="Già visto">
                                    <i class="bi bi-check-lg"></i>
                                </button>
                            }
                            else
                            {
                                <button class="btn-watch position-absolute top-0 end-0 m-2 add-movie-btn"
                                        type="button"
                                        data-movie-id="@movie.Id"
                                        title="Segna come visto"
                                        onclick="event.stopPropagation();">
                                    <i class="bi bi-plus-lg"></i>
                                </button>
                            }

                            <!-- Aggiungi al carrello -->
                            <button class="btn-cart position-absolute top-0 start-0 m-2 add-cart-btn"
                                    type="button"
                                    data-movie-id="@movie.Id"
                                    title="Aggiungi al carrello"
                                    onclick="event.stopPropagation();">
                                🛒
                            </button>
                        }
                    </div>
                    <div class="card-body p-2 text-center">
                        <h6 class="card-title mb-1 text-truncate">@movie.Title</h6>
                        <small class="text-muted">@movie.Genre • @movie.Year</small>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Più visti in fondo -->
    <div class="mt-5">
        <h2 class="matrix-subtitle mb-3">🔥 Più Visti</h2>
        <div class="scroll-section mb-5">
            <div class="movie-row">
                @foreach (var movie in Model.Take(10))
                {
                    var isWatched = watchedMovies.Contains(movie.Id);
                    <div class="movie-card position-relative">
                        <a asp-controller="Home" asp-action="Dettagli" asp-route-id="@movie.Id">
                            <img src="@movie.ImageUrl" alt="@movie.Title" class="movie-poster" />
                        </a>

                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                            <!-- Pulsante aggiungi ai visti -->
                            @if (isWatched)
                            {
                                <button class="btn-watch position-absolute top-0 end-0 m-2" disabled title="Già visto">
                                    <i class="bi bi-check-lg"></i>
                                </button>
                            }
                            else
                            {
                                <button class="btn-watch position-absolute top-0 end-0 m-2 add-movie-btn"
                                        type="button"
                                        data-movie-id="@movie.Id"
                                        title="Segna come visto">
                                    <i class="bi bi-plus-lg"></i>
                                </button>
                            }

                            <!-- Pulsante aggiungi al carrello -->
                            <button class="btn-cart position-absolute top-0 start-0 m-2 add-cart-btn"
                                    type="button"
                                    data-movie-id="@movie.Id"
                                    title="Aggiungi al carrello">
                                🛒
                            </button>
                        }

                        <div class="movie-info text-center mt-2">
                            <h6 class="mb-1 text-truncate">@movie.Title</h6>
                            <small class="text-muted">@movie.Genre • @movie.Year</small>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modale condivisa -->
<partial name="_AddWatchedModal" />

@section Styles {
    <style>
        body {
            background: #000;
            color: #39FF14;
            font-family: 'Share Tech Mono', monospace;
        }

        .matrix-subtitle {
            color: #39FF14;
            text-shadow: 0 0 10px #39FF14;
        }

        .matrix-card {
            background: #0d0d0d;
            border: 1px solid #39FF14;
            transition: transform .2s, box-shadow .3s;
            cursor: pointer;
        }

            .matrix-card:hover {
                transform: scale(1.04);
                box-shadow: 0 0 15px #39FF14;
            }

        .movie-poster {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
            border: 1px solid #39FF14;
        }

        .btn-matrix-admin {
            border: 1px solid #39FF14;
            color: #39FF14;
            background: transparent;
            padding: 10px 22px;
            border-radius: 8px;
            font-weight: bold;
            letter-spacing: 1px;
            transition: all .3s ease;
            text-transform: uppercase;
            text-decoration: none;
        }

            .btn-matrix-admin:hover {
                background: #39FF14;
                color: #000;
                box-shadow: 0 0 12px #39FF14;
                text-decoration: none;
            }


        /* Pulsante carrello */
        .btn-cart {
            border: 1px solid #39FF14;
            color: #39FF14;
            background: transparent;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all .3s;
        }

            .btn-cart:hover {
                background: #39FF14;
                color: #000;
                box-shadow: 0 0 10px #39FF14;
            }

        /* Scroll più visti */
        .scroll-section {
            overflow-x: auto;
            white-space: nowrap;
            scrollbar-width: thin;
            scrollbar-color: #39FF14 #111;
        }

        .movie-row {
            display: flex;
            gap: 15px;
            padding-bottom: 5px;
        }

        .movie-card {
            flex: 0 0 auto;
            width: 200px;
            transition: transform .2s, box-shadow .3s;
            text-align: center;
        }

            .movie-card:hover {
                transform: scale(1.05);
                box-shadow: 0 0 15px #39FF14;
            }

        .btn-watch {
            border: 1px solid #39FF14;
            color: #39FF14;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .btn-watch:hover {
                background: #39FF14;
                color: #000;
            }

       
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // --- Aggiungi ai visti ---
            document.querySelectorAll('.add-movie-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    const id = btn.getAttribute('data-movie-id');
                    document.getElementById('movieId').value = id;
                    document.getElementById('watchDate').value = new Date().toISOString().split('T')[0];
                    new bootstrap.Modal(document.getElementById('addWatchedModal')).show();
                });
            });

            // --- Aggiungi al carrello ---
            document.querySelectorAll('.add-cart-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    const id = btn.getAttribute('data-movie-id');
                    fetch('/Carrello/Aggiungi', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: 'id=' + encodeURIComponent(id)
                    })
                    .then(r => r.json())
                    .then(d => {
                        if (d.success) {
                            document.getElementById('cart-count').textContent = d.count;
                            btn.innerHTML = '✔️';
                            btn.disabled = true;
                        }
                    });
                });
            });

            // --- Salva film visto ---
            document.getElementById('saveWatchedBtn').addEventListener('click', () => {
                const id = document.getElementById('movieId').value;
                const date = document.getElementById('watchDate').value;
                const comment = document.getElementById('comment').value;

                fetch('@Url.Action("SegnaComeVisto", "Home")', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `__RequestVerificationToken=${getToken()}&id=${encodeURIComponent(id)}&watchDate=${encodeURIComponent(date)}&comment=${encodeURIComponent(comment)}`
                })
                .then(r => r.json())
                .then(d => {
                    if (d.success) window.location.href = '/Home/Visti';
                    else alert('Errore: ' + d.message);
                })
                .catch(() => alert('Errore di rete'));
            });

            function getToken() {
                const el = document.querySelector('input[name="__RequestVerificationToken"]');
                return el ? el.value : '';
            }
        });
    </script>
}
