@model List<matrix_movie.Models.Movie>
@{
    ViewData["Title"] = "Home";
    var watchedMovies = ViewBag.WatchedMovies as List<int> ?? new List<int>();
}

<div class="container mt-4">
    @if (User.IsInRole("Admin"))
    {
        <div class="text-end mb-4">
            <a asp-controller="Admin" asp-action="Index" class="btn-matrix-admin">GESTISCI FILM</a>
        </div>
    }

    @if (ViewBag.IsSearch == true && !Model.Any())
    {
        <div class="text-center mt-5 matrix-empty">
            ❌ Nessun film trovato
            @if (!string.IsNullOrEmpty(ViewBag.SearchQuery))
            {
                <span> per "<strong>@ViewBag.SearchQuery</strong>"</span>
            }
        </div>
    }

    <div class="row row-cols-2 row-cols-md-4 row-cols-lg-6 g-4">
        @foreach (var movie in Model)
        {
            var isWatched = watchedMovies.Contains(movie.Id);
            <div class="col">
                <div class="card h-100 matrix-card"
                     onclick="location.href='@Url.Action("Dettagli", "Home", new { id = movie.Id })'">
                    <div class="position-relative">
                        <img src="@movie.ImageUrl" class="card-img-top movie-poster" alt="@movie.Title" />
                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                            if (isWatched)
                            {
                                <button class="btn-watch position-absolute top-0 end-0 m-2" disabled><i class="bi bi-check-lg"></i></button>
                            }
                            else
                            {

                                <button class="btn-watch position-absolute top-0 end-0 m-2 add-movie-btn"
                                          type="button" data-movie-id="@movie.Id">
                                    <i class="bi bi-plus-lg"></i>
                                </button>
                                ;
                            }
                            <button class="btn-cart position-absolute top-0 start-0 m-2 add-cart-btn"
                                    type="button" data-movie-id="@movie.Id">
                                🛒
                            </button>
                        }
                    </div>
                    <div class="card-body p-2 text-center">
                        <h6 class="card-title mb-1 text-truncate">@movie.Title</h6>
                        <small class="text-muted">@movie.Genre • @movie.Year</small>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (ViewBag.IsSearch != true && Model.Any())
    {
        <div class="mt-5">
            <h2 class="matrix-subtitle mb-3">🔥 Più Visti</h2>
            <div class="scroll-section mb-5">
                <div class="movie-row">
                    @foreach (var movie in Model.Take(10))
                    {
                        <div class="movie-card">
                            <a asp-controller="Home" asp-action="Dettagli" asp-route-id="@movie.Id">
                                <img src="@movie.ImageUrl" alt="@movie.Title" class="movie-poster" />
                            </a>
                            <div class="movie-info text-center mt-2">
                                <h6 class="mb-1 text-truncate">@movie.Title</h6>
                                <small class="text-muted">@movie.Genre • @movie.Year</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

<partial name="_AddWatchedModal" />

@section Styles {
    <style>
        body {
            background: #000;
            color: #39FF14;
            font-family: 'Share Tech Mono',monospace;
        }

        .matrix-card {
            background: #0d0d0d;
            border: 1px solid #39FF14;
            cursor: pointer;
            transition: .3s;
        }

            .matrix-card:hover {
                transform: scale(1.04);
                box-shadow: 0 0 15px #39FF14;
            }

        .movie-poster {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
            border: 1px solid #39FF14;
        }

        .btn-cart, .btn-watch {
            border: 1px solid #39FF14;
            color: #39FF14;
            background: transparent;
            border-radius: 50%;
            width: 30px;
            height: 30px;
        }

            .btn-cart:hover, .btn-watch:hover {
                background: #39FF14;
                color: #000;
                box-shadow: 0 0 10px #39FF14;
            }

        .matrix-subtitle {
            color: #39FF14;
            text-shadow: 0 0 10px #39FF14;
        }

        .matrix-empty {
            color: #39FF14;
            text-shadow: 0 0 10px #39FF14;
            font-size: 1.2rem;
        }

        .scroll-section {
            overflow-x: auto;
            white-space: nowrap;
        }

        .movie-row {
            display: flex;
            gap: 15px;
        }

        .movie-card {
            width: 200px;
            flex: 0 0 auto;
            text-align: center;
            transition: .3s;
        }

            .movie-card:hover {
                transform: scale(1.05);
                box-shadow: 0 0 15px #39FF14;
            }

        .btn-matrix-admin {
            border: 1px solid #39FF14;
            color: #39FF14 !important;
            background: transparent;
            padding: 10px 22px;
            border-radius: 8px;
            font-weight: bold;
            letter-spacing: 1px;
            transition: all .3s ease;
            text-transform: uppercase;
            text-decoration: none !important;
            display: inline-block;
        }

            .btn-matrix-admin:hover,
            .btn-matrix-admin:focus,
            .btn-matrix-admin:active {
                background: #39FF14 !important;
                color: #000 !important;
                box-shadow: 0 0 12px #39FF14;
                text-decoration: none !important;
                outline: none !important;
            }
    </style>
}
