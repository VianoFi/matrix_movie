@model List<matrix_movie.Models.Movie>
@{
    ViewData["Title"] = "Home";
    var watchedMovies = ViewBag.WatchedMovies as List<int> ?? new List<int>();
}

<div class="container mt-4">
    <!-- Token antifalsificazione -->
    <form id="af-token-form" style="display:none;">
        @Html.AntiForgeryToken()
    </form>

    <!-- Pulsante Gestione Film (solo Admin) -->
    @if (User.IsInRole("Admin"))
    {
        <div class="text-end mb-4">
            <a asp-controller="Admin" asp-action="Index" class="btn-matrix-admin">GESTISCI FILM</a>
        </div>
    }

    <!-- Nessun risultato -->
    @if (ViewBag.IsSearch == true && !Model.Any())
    {
        <div class="text-center mt-5 matrix-empty">
            ❌ Nessun film trovato
            @if (!string.IsNullOrEmpty(ViewBag.SearchQuery))
            {
                <span> per "<strong>@ViewBag.SearchQuery</strong>"</span>
            }
        </div>
    }

    <!-- Elenco Film -->
    <div class="row row-cols-2 row-cols-md-4 row-cols-lg-6 g-4">
        @foreach (var movie in Model)
        {
            var isWatched = watchedMovies.Contains(movie.Id);
            <div class="col">
                <div class="card h-100 matrix-card"
                     onclick="location.href='@Url.Action("Dettagli", "Home", new { id = movie.Id })'">
                    <div class="position-relative">
                        <img src="@movie.ImageUrl" class="card-img-top movie-poster" alt="@movie.Title" />
                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                            <!-- Pulsante Aggiungi ai visti -->
                            @if (isWatched)
                            {
                                <button class="btn-watch position-absolute top-0 end-0 m-2" disabled>
                                    <i class="bi bi-check-lg"></i>
                                </button>
                            }
                            else
                            {
                                <button class="btn-watch position-absolute top-0 end-0 m-2 add-movie-btn"
                                        type="button" data-movie-id="@movie.Id"
                                        onclick="event.stopPropagation();">
                                    <i class="bi bi-plus-lg"></i>
                                </button>
                            }

                            <!-- Pulsante Aggiungi al carrello -->
                            <button class="btn-cart position-absolute top-0 start-0 m-2 add-cart-btn"
                                    type="button" data-movie-id="@movie.Id"
                                    title="Aggiungi al carrello"
                                    onclick="event.stopPropagation();">
                                🛒
                            </button>
                        }
                    </div>
                    <div class="card-body p-2 text-center">
                        <h6 class="card-title mb-1 text-truncate">@movie.Title</h6>
                        <small class="text-muted">@movie.Genre • @movie.Year</small>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Sezione Più Visti -->
    @if (ViewBag.IsSearch != true && Model.Any())
    {
        <div class="mt-5">
            <h2 class="matrix-subtitle mb-3">🔥 Più Visti</h2>
            <div class="scroll-section mb-5">
                <div class="movie-row">
                    @foreach (var movie in Model.Take(10))
                    {
                        <div class="movie-card">
                            <a asp-controller="Home" asp-action="Dettagli" asp-route-id="@movie.Id">
                                <img src="@movie.ImageUrl" alt="@movie.Title" class="movie-poster" />
                            </a>
                            <div class="movie-info text-center mt-2">
                                <h6 class="mb-1 text-truncate">@movie.Title</h6>
                                <small class="text-muted">@movie.Genre • @movie.Year</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

<!-- Modale condivisa -->
<partial name="_AddWatchedModal" />

@section Styles {
    <style>
        body {
            background: #000;
            color: #39FF14;
            font-family: 'Share Tech Mono', monospace;
        }

        .matrix-card {
            background: #0d0d0d;
            border: 1px solid #39FF14;
            cursor: pointer;
            transition: .3s;
        }

            .matrix-card:hover {
                transform: scale(1.04);
                box-shadow: 0 0 15px #39FF14;
            }

        .movie-poster {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
            border: 1px solid #39FF14;
        }

        .btn-cart, .btn-watch {
            border: 1px solid #39FF14;
            color: #39FF14;
            background: transparent;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: .3s;
        }

            .btn-cart:hover, .btn-watch:hover {
                background: #39FF14;
                color: #000;
                box-shadow: 0 0 10px #39FF14;
            }

        .matrix-subtitle {
            color: #39FF14;
            text-shadow: 0 0 10px #39FF14;
        }

        .matrix-empty {
            color: #39FF14;
            text-shadow: 0 0 10px #39FF14;
            font-size: 1.2rem;
        }

        .scroll-section {
            overflow-x: auto;
            white-space: nowrap;
        }

        .movie-row {
            display: flex;
            gap: 15px;
        }

        .movie-card {
            width: 200px;
            flex: 0 0 auto;
            text-align: center;
            transition: .3s;
        }

            .movie-card:hover {
                transform: scale(1.05);
                box-shadow: 0 0 15px #39FF14;
            }

        .btn-matrix-admin {
            border: 1px solid #39FF14;
            color: #39FF14 !important;
            background: transparent;
            padding: 10px 22px;
            border-radius: 8px;
            font-weight: bold;
            letter-spacing: 1px;
            transition: all .3s ease;
            text-transform: uppercase;
            text-decoration: none !important;
            display: inline-block;
        }

            .btn-matrix-admin:hover {
                background: #39FF14 !important;
                color: #000 !important;
                box-shadow: 0 0 12px #39FF14;
                text-decoration: none !important;
            }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // --- Ottiene il token antiforgery ---
            function getToken() {
                const el = document.querySelector('#af-token-form input[name="__RequestVerificationToken"]');
                return el ? el.value : '';
            }

            // --- Aggiungi al carrello ---
            document.querySelectorAll('.add-cart-btn').forEach(btn => {
                btn.addEventListener('click', e => {
                    e.stopPropagation();
                    const id = btn.getAttribute('data-movie-id');

                    fetch('/Carrello/Aggiungi', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: 'id=' + encodeURIComponent(id)
                    })
                        .then(r => r.json())
                        .then(d => {
                            if (d.success) {
                                document.getElementById('cart-count').textContent = d.count;
                                btn.innerHTML = '✔️';
                                btn.disabled = true;
                            }
                        })
                        .catch(() => console.error('Errore nel caricamento del carrello'));
                });
            });

            // --- Aggiungi ai visti (apre modale) ---
            document.querySelectorAll('.add-movie-btn').forEach(btn => {
                btn.addEventListener('click', e => {
                    e.stopPropagation();
                    const id = btn.getAttribute('data-movie-id');
                    document.getElementById('movieId').value = id;
                    document.getElementById('watchDate').value = new Date().toISOString().split('T')[0];
                    new bootstrap.Modal(document.getElementById('addWatchedModal')).show();
                });
            });

            // --- Salva film visto ---
            const saveBtn = document.getElementById('saveWatchedBtn');
            if (saveBtn) {
                saveBtn.addEventListener('click', () => {
                    const id = document.getElementById('movieId').value;
                    const date = document.getElementById('watchDate').value;
                    const comment = document.getElementById('comment').value;
                    const token = getToken();

                    fetch('/Home/SegnaComeVisto', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: `__RequestVerificationToken=${encodeURIComponent(token)}&id=${encodeURIComponent(id)}&watchDate=${encodeURIComponent(date)}&comment=${encodeURIComponent(comment)}`
                    })
                        .then(r => r.json())
                        .then(d => {
                            if (d.success) {
                                const btn = document.querySelector(`.add-movie-btn[data-movie-id="${id}"]`);
                                if (btn) {
                                    btn.innerHTML = '✔️';
                                    btn.disabled = true;
                                }
                                bootstrap.Modal.getInstance(document.getElementById('addWatchedModal')).hide();
                                window.location.href = 'Home/Visti'
                            } else {
                                alert('Errore: ' + (d.message || 'Impossibile aggiungere ai visti.'));
                            }
                        })
                        .catch(() => alert('Errore di rete o token mancante.'));
                });
            }
        });
    </script>
}
