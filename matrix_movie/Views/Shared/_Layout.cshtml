@{
    var userName = User.Identity.IsAuthenticated
        ? User.Identity.Name.Split('@')[0]
        : "";
}

<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MatrixMovie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Share+Tech+Mono&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm matrix-navbar border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="MatrixMovie" style="height:40px; width:auto;" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <li class="nav-item me-3">
                            <a class="nav-link matrix-link" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>

                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item ms-2">
                                <a class="nav-link matrix-link" asp-controller="Home" asp-action="Visti">I TUOI FILM</a>
                            </li>
                            <li class="nav-item ms-3">
                                <a class="nav-link matrix-link position-relative" asp-controller="Carrello" asp-action="Index">
                                    🛒
                                    <span id="cart-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success">
                                        @(Context.Session.GetObjectFromJson<List<int>>("Carrello")?.Count ?? 0)
                                    </span>
                                </a>
                            </li>


                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link matrix-user">
                                    Benvenuto,
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span class="matrix-admin">@userName</span>
                                    }
                                    else
                                    {
                                        <span class="matrix-client">@userName</span>
                                    }
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="form-inline">
                                    <button type="submit" class="nav-link btn btn-link matrix-link">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link matrix-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link matrix-link" asp-area="Identity" asp-page="/Account/Register">Registrati</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="matrix-footer mt-3">
        <div class="container">
            &copy; @DateTime.Now.Year - MatrixMovie
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

    <style>
        body {
            background-color: #000;
            color: #39FF14;
            font-family: 'Share Tech Mono', monospace;
        }

        .matrix-navbar {
            background-color: #000 !important;
            border-bottom: 1px solid #39FF14;
            box-shadow: 0 0 15px #39FF14;
        }

        .matrix-link {
            color: #39FF14 !important;
            text-shadow: 0 0 10px #39FF14;
            transition: all 0.3s ease;
            padding: 8px 14px !important;
            border-radius: 6px;
        }

            .matrix-link:hover {
                color: #000 !important;
                background: #39FF14;
                box-shadow: 0 0 12px #39FF14;
            }

        .matrix-user {
            color: #39FF14;
        }

        .matrix-admin {
            color: #ff4040;
            font-weight: bold;
            text-shadow: 0 0 8px #ff4040;
        }

        .matrix-client {
            color: #39FF14;
            font-weight: bold;
            text-shadow: 0 0 8px #39FF14;
        }

        .matrix-footer {
            background-color: #000;
            border-top: 1px solid #39FF14;
            color: #39FF14;
            text-align: center;
            padding: 10px 0;
            text-shadow: 0 0 10px #39FF14;
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            const res = await fetch('/js/cartCount');
        });
    </script>

</body>
</html>
