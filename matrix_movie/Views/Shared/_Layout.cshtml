@{
    var userName = User.Identity.IsAuthenticated
        ? User.Identity.Name.Split('@')[0]
        : "";
}

<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MatrixMovie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Share+Tech+Mono&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <!-- Navbar Matrix -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm matrix-navbar border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="MatrixMovie" style="height:40px; width:auto;" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link matrix-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link matrix-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <!-- Blocco utente -->
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link matrix-user">
                                    Benvenuto,
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span class="matrix-admin">@userName</span>
                                    }
                                    else
                                    {
                                        <span class="matrix-client">@userName</span>
                                    }
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="form-inline">
                                    <button type="submit" class="nav-link btn btn-link matrix-link">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link matrix-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link matrix-link" asp-area="Identity" asp-page="/Account/Register">Registrati</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="matrix-footer mt-3">
        <div class="container">
            &copy; @DateTime.Now.Year - MatrixMovie
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

    <style>
        body {
            background-color: #000;
            color: #39FF14;
            font-family: 'Share Tech Mono', monospace;
        }

        .matrix-navbar {
            background-color: #000 !important;
            border-bottom: 1px solid #39FF14;
            box-shadow: 0 0 15px #39FF14;
        }

            .matrix-link, .matrix-navbar .navbar-brand {
                color: #39FF14 !important;
                text-shadow: 0 0 10px #39FF14;
                transition: all 0.3s ease;
            }

                .matrix-link:hover, .matrix-navbar .navbar-brand:hover {
                    color: #00ff77 !important;
                    text-shadow: 0 0 15px #00ff77;
                }

        .matrix-user {
            color: #39FF14;
        }

        .matrix-admin {
            color: #ff4040;
            font-weight: bold;
            text-shadow: 0 0 8px #ff4040;
        }

        .matrix-client {
            color: #39FF14;
            font-weight: bold;
            text-shadow: 0 0 8px #39FF14;
        }

        .matrix-footer {
            background-color: #000;
            border-top: 1px solid #39FF14;
            color: #39FF14;
            text-align: center;
            padding: 10px 0;
            text-shadow: 0 0 10px #39FF14;
        }
    </style>
</body>
</html>
