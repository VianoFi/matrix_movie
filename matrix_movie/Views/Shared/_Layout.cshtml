@using matrix_movie.Data
@inject ApplicationDbContext Db

@{
    var userName = User.Identity.IsAuthenticated ? User.Identity.Name.Split('@')[0] : "";
    var genres = Db.Movies.Select(m => m.Genre).Distinct().OrderBy(g => g).ToList();
    var currentQuery = Context.Request.Query["query"].ToString();
    var currentGenre = Context.Request.Query["genre"].ToString();
    if (string.IsNullOrEmpty(currentGenre)) currentGenre = "Tutti";
}
<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MatrixMovie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Share+Tech+Mono&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", false)
</head>
<body style="background:#000;color:#39FF14;font-family:'Share Tech Mono',monospace">
    <header>
        <nav class="navbar navbar-expand-sm matrix-navbar border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="MatrixMovie" style="height:40px;" />
                </a>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <li class="nav-item me-3"><a class="nav-link matrix-link" asp-controller="Home" asp-action="Index">HOME</a></li>
                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item ms-2"><a class="nav-link matrix-link" asp-controller="Home" asp-action="Visti">I TUOI FILM</a></li>
                        }
                    </ul>

                    <form class="d-flex align-items-center me-3" asp-controller="Home" asp-action="Search" method="get">
                        <input name="query" class="form-control matrix-search-input me-2"
                               placeholder="Cerca film..." value="@currentQuery" />
                        <select name="genre" class="form-select matrix-search-select me-2">
                            <option value="Tutti" selected="@(currentGenre == "Tutti")">Tutti</option>
                            @foreach (var g in genres)
                            {
                                <option value="@g" selected="@(currentGenre == g)">@g</option>
                            }
                        </select>
                        <button type="submit" class="btn-matrix"><i class="bi bi-search"></i></button>
                    </form>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link matrix-user">
                                    Benvenuto,
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span class="matrix-admin">@userName</span>
                                    }
                                    else
                                    {
                                        <span class="matrix-client">@userName</span>
                                    }
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="form-inline">
                                    <button type="submit" class="nav-link btn btn-link matrix-link">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link matrix-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link matrix-link" asp-area="Identity" asp-page="/Account/Register">Registrati</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container"><main role="main">@RenderBody()</main></div>
    <footer class="matrix-footer mt-3 text-center border-top pt-2">&copy; @DateTime.Now.Year - MatrixMovie</footer>

    <style>
        .matrix-navbar {
            background: #000;
            border-bottom: 1px solid #39FF14;
            box-shadow: 0 0 15px #39FF14;
        }

        .matrix-link {
            color: #39FF14 !important;
            text-shadow: 0 0 10px #39FF14;
            transition: .3s;
        }

            .matrix-link:hover {
                background: #39FF14;
                color: #000 !important;
                box-shadow: 0 0 12px #39FF14;
            }

        .matrix-search-input, .matrix-search-select {
            background: #000 !important;
            color: #39FF14 !important;
            border: 1px solid #39FF14 !important;
            border-radius: 6px;
        }

            .matrix-search-input:focus, .matrix-search-select:focus {
                box-shadow: 0 0 10px #39FF14 !important;
            }

        .btn-matrix {
            border: 1px solid #39FF14;
            color: #39FF14;
            background: transparent !important;
            border-radius: 6px;
        }

            .btn-matrix:hover {
                background: #39FF14 !important;
                color: #000 !important;
                box-shadow: 0 0 12px #39FF14;
            }



        .matrix-user {
            color: #39FF14;
            font-weight: 500;
            text-shadow: 0 0 8px #39FF14;
        }

        .matrix-admin {
            color: #ff4040 !important;
            font-weight: bold;
            text-shadow: 0 0 8px #ff4040;
        }

        .matrix-client {
            color: #39FF14 !important;
            font-weight: bold;
            text-shadow: 0 0 8px #39FF14;
        }


        .matrix-footer {
            color: #39FF14;
            text-shadow: 0 0 10px #39FF14;
        }
    </style>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
